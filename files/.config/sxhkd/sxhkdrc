#
# Volume
#

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


#
# Brightness
#

XF86MonBrightnessUp
	xbacklight -inc 1 -time 50
XF86MonBrightnessDown
	xbacklight -dec 1 -time 50

shift + XF86MonBrightnessUp
	xbacklight -inc 10 -time 50
shift + XF86MonBrightnessDown
	xbacklight -dec 10 -time 50


super + XF86MonBrightnessUp
	xbacklight -set 100 -time 50
super + XF86MonBrightnessDown
	xbacklight -set 1 -time 50

#
# Applications
#

# start a terminal
super + Return 
	st

# start ranger
super + r
	st -e ranger

# start python shell
super + p
	st -e python2

# start ruby shell
super + i
	st -e irb --multiline

# start cmus
super + c
	st -e cmus

# start cordless
super + shift + c
	st -e cordless

# start qutebrowser
super + BackSpace
	qutebrowser

# start dmenu
super + d
	dmenu_run

# set wallpaper  
super + s
	setbg

# start steam
super + shift + s
	steam

# start discord
super + v
	discord

# start lutis
super + g
	lutris

# screenshot script
Print
	screenshot
